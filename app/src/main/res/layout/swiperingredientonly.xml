<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutSwiper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeffd1">


    <!-- Bottom bar -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="602dp"
        android:layout_marginBottom="40dp" >


        <TextView
            android:id="@+id/recommendationDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="cursive"
            android:rotation="0"
            android:rotationX="0"
            android:rotationY="0"
            android:text="Ingredient"
            android:textAlignment="center"
            android:textColor="#4a7996"
            android:textSize="48sp" />

        <Button
            android:id="@+id/likeRecommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="500dp"
            android:backgroundTint="#77bd68"
            android:onClick="clickLike"
            android:text="ðŸ‘"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dislikeRecommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="500dp"
            android:backgroundTint="#d16a5c"
            android:onClick="clickDislike"
            android:text="ðŸ‘Ž"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>

