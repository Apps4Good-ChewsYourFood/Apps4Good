<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeffd1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Recipe Title"
        android:fontFamily="cursive"
        android:textColor="#4a7996"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_above="@+id/time_text_box"/>

    <TextView
        android:id="@+id/time_text_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prep Time, Cook Time, Total Time"
        android:textColor="#4a7996"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextTextPersonName2"/>

    <TextView
        android:id="@+id/instructions_text_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe Instructions"
        android:textColor="#4a7996"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"/>

    <!-- Bottom bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Denim"
        android:orientation="horizontal"
        android:gravity="center">


        <!-- Settings button -->
        <Button
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📊️"
            android:textSize="30sp"/>

        <!-- Home button -->
        <Button
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🏠"
            android:textSize="30sp"/>

        <!-- Favorites button -->
        <Button
            android:id="@+id/favorites_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="❤️"
            android:textSize="30sp"/>
    </LinearLayout>

</RelativeLayout>
